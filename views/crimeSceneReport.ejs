<%- layout('boilerplate') %>

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">crimeSceneReport's information</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">date : <%= crimeSceneReport.date  %></li>
                    <li class="list-group-item">type : <%=crimeSceneReport.type%></li>
                    <li class="list-group-item">description : <%=crimeSceneReport.description %></li>
                    <li class="list-group-item">report id : <%=crimeSceneReport.report_id %></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-6 ">
        <form class="d-inline" action="/crimeSceneReport/<%=crimeSceneReport.report_id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>

</div>